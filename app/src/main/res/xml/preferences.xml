<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:defaultValue="anonymous"
        android:key="edit_text_preference_nickname"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Enter nickname here" />
    <EditTextPreference
        android:defaultValue="127.0.0.1"
        android:key="edit_text_preference_server"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Remote server address" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="check_box_preference_only_server"
        android:title="Only server functions" />
</PreferenceScreen>